<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.argaa.firebasetutorials.ClassesActivity">

    <CheckBox
        android:id="@+id/lunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/martes"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:layout_marginStart="48dp"
        android:text="Lunes" />

    <CheckBox
        android:id="@+id/martes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lunes"
        android:layout_centerVertical="true"
        android:text="Martes" />

    <CheckBox
        android:id="@+id/miercoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/martes"
        android:layout_below="@+id/martes"
        android:layout_marginTop="38dp"
        android:text="Miercoles" />

    <CheckBox
        android:id="@+id/jueves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/miercoles"
        android:layout_below="@+id/domingo"
        android:text="Jueves" />

    <CheckBox
        android:id="@+id/viernes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/martes"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="59dp"
        android:text="Viernes" />

    <CheckBox
        android:id="@+id/sabado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/viernes"
        android:layout_below="@+id/martes"
        android:text="Sabado" />

    <CheckBox
        android:id="@+id/domingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sabado"
        android:layout_below="@+id/miercoles"
        android:text="Domingo" />

    <EditText
        android:id="@+id/editTextMaterias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viernes"
        android:layout_alignStart="@+id/lunes"
        android:layout_marginBottom="61dp"
        android:ems="10"
        android:hint="Nombre de la materia"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/materia_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Agrega una materia"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jueves"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Agregar" />
</RelativeLayout>
